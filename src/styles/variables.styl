/* utils */
white(a)
  rgba(255, 255, 255, a)

black(a)
  rgba(0, 0, 0, a)

/* 明日方舟风格颜色变量 */
arknights-orange-primary(a)
  rgba(255, 107, 53, a) /* 明日方舟主橙色 - #FF6B35 */

arknights-orange-secondary(a)
  rgba(247, 147, 30, a) /* 明日方舟次要橙色 - #F7931E */

arknights-orange-tertiary(a)
  rgba(255, 165, 0, a) /* 明日方舟三级橙色 - #FFA500 */

arknights-dark-bg(a)
  rgba(29, 30, 34, a) /* 明日方舟深色背景 - 高灰度基调 */

arknights-light-bg(a)
  rgba(240, 235, 220, a) /* 明日方舟浅色背景 - 高灰度基调 */

arknights-card-dark(a)
  rgba(38, 40, 48, a) /* 明日方舟深色卡片 - 高灰度基调 */

arknights-card-light(a)
  rgba(255, 255, 255, a) /* 明日方舟浅色卡片 - 纯白色 */

arknights-accent-blue(a)
  rgba(51, 143, 255, a) /* 明日方舟蓝色强调色 - 科技感 */

arknights-accent-purple(a)
  rgba(144, 48, 224, a) /* 明日方舟紫色强调色 - 沉稳 */

arknights-accent-green(a)
  rgba(0, 200, 128, a) /* 明日方舟绿色强调色 - 活力 */

rainbow-light = linear-gradient(to right, oklch(0.80 0.10 0), oklch(0.80 0.10 30), oklch(0.80 0.10 60), oklch(0.80 0.10 90), oklch(0.80 0.10 120), oklch(0.80 0.10 150), oklch(0.80 0.10 180), oklch(0.80 0.10 210), oklch(0.80 0.10 240), oklch(0.80 0.10 270), oklch(0.80 0.10 300), oklch(0.80 0.10 330), oklch(0.80 0.10 360))
rainbow-dark = linear-gradient(to right, oklch(0.70 0.10 0), oklch(0.70 0.10 30), oklch(0.70 0.10 60), oklch(0.70 0.10 90), oklch(0.70 0.10 120), oklch(0.70 0.10 150), oklch(0.70 0.10 180), oklch(0.70 0.10 210), oklch(0.70 0.10 240), oklch(0.70 0.10 270), oklch(0.70 0.10 300), oklch(0.70 0.10 330), oklch(0.70 0.10 360))

:root
  --radius-large 0.75rem
  --radius-small 0.375rem
  --content-delay 150ms
  --border-thin 1px
  --border-thick 2px
  
  /* 字体方案 - 科技感 */
  --font-primary: 'Inter', 'Noto Sans SC', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif
  --font-mono: 'JetBrains Mono Variable', 'JetBrains Mono', 'Fira Code', Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace
  --font-size-xs: 0.75rem
  --font-size-sm: 0.875rem
  --font-size-base: 1rem
  --font-size-lg: 1.125rem
  --font-size-xl: 1.25rem
  --font-size-2xl: 1.5rem
  --font-size-3xl: 1.875rem
  --font-size-4xl: 2.25rem
  --font-weight-light: 300
  --font-weight-regular: 400
  --font-weight-medium: 500
  --font-weight-semibold: 600
  --font-weight-bold: 700

/* An util to define variables that vary with light and dark mode */
define(vars)
  :root
    for key, value in vars
      {key}: value[0]
  :root.dark
    for key, value in vars
      if length(value) > 1
        {key}: value[1]

define({
  /* 主色调 - 明日方舟橙色系统 */
  --primary: oklch(0.75 0.25 25) oklch(0.80 0.25 30) /* 主橙色 - #FF6B35 */
  --primary-light: oklch(0.85 0.20 25) oklch(0.90 0.20 30) /* 浅橙色 */
  --primary-dark: oklch(0.65 0.30 25) oklch(0.70 0.30 30) /* 深橙色 */
  --primary-glow: rgba(255, 107, 53, 0.3) rgba(255, 165, 0, 0.3) /* 橙色光晕效果 */
  
  /* 背景色 - 高灰度基调 */
  --page-bg: rgba(239, 210, 195, 0.78) arknights-dark-bg(1) /* 浅色/深色背景 */
  --card-bg: rgba(255, 255, 255, 0.2) rgba(255, 223, 200, 0.03) /* 卡片背景  */
  --card-border: rgba(255, 155, 88, 0.3) rgba(0, 0, 0, 0) /* 卡片边框 - 完全透明 */
  --card-shadow: 0 0 0 rgba(0, 0, 0, 0) 0 0 0 rgba(0, 0, 0, 0) /* 卡片阴影 - 移除 */
  
  /* 文字颜色 - 高灰度基调 */
  --text-primary: rgba(51, 51, 51, 1) rgba(255, 255, 255, 1) /* 主要文字 - 深色模式白色，浅色模式#333333 */
  --text-secondary: rgba(85, 85, 85, 1) rgba(255, 255, 255, 0.9) /* 次要文字 */
  --text-tertiary: rgba(128, 128, 128, 1) rgba(255, 255, 255, 0.7) /*  tertiary文字 */
  
  /* 按钮样式 - 明日方舟科技感 */
  --btn-primary-bg: arknights-orange-primary(1) oklch(0.85 0.25 30) /* 主要按钮背景 */
  --btn-primary-bg-hover: arknights-orange-secondary(1) oklch(0.75 0.30 30) /* 主要按钮悬停 */
  --btn-primary-bg-active: arknights-orange-primary(0.8) oklch(0.85 0.25 30 / 0.8) /* 主要按钮点击 */
  --btn-primary-text: white(1) white(1) /* 主要按钮文字 */
  
  --btn-regular-bg: rgba(255, 255, 255, 0.4) rgba(45, 45, 45, 1) /* 常规按钮背景 - 50%透明度 */
  --btn-regular-bg-hover: rgba(255, 255, 255, 0.5) rgba(55, 55, 55, 1) /* 常规按钮悬停 - 60%透明度 */
  --btn-regular-bg-active: rgba(255, 255, 255, 0.6) rgba(65, 65, 65, 1) /* 常规按钮点击 - 70%透明度 */
  --btn-regular-text: var(--text-primary) var(--text-primary) /* 常规按钮文字 */
  
  /* 线条和分隔 - 科技感 */
  --line-divider: rgba(200, 200, 210, 0.8) rgba(50, 50, 60, 0.9) /* 分隔线 */
  --line-color: rgba(180, 180, 190, 0.6) rgba(60, 60, 70, 0.8) /* 线条颜色 */
  --meta-divider: rgba(170, 170, 180, 0.8) rgba(70, 70, 80, 0.9) /* 元信息分隔 */
  
  /* 代码块 - 明日方舟风格 */
  --inline-code-bg: rgba(255, 255, 255, 0.5) rgba(45, 45, 45, 1) /* 行内代码背景 - 50%透明度 */
  --inline-code-color: arknights-orange-primary(1) oklch(0.85 0.25 30) /* 行内代码颜色 */
  --codeblock-bg: rgba(29, 30, 34, 1) rgba(29, 30, 34, 1) /* 代码块背景 */
  --codeblock-border: rgba(255, 107, 53, 0.2) oklch(0.85 0.25 30 / 0.2) /* 代码块边框 */
  --selection-bg: rgba(255, 107, 53, 0.3) oklch(0.85 0.25 30 / 0.3) /* 选中文本背景 */
  
  /* 其他元素 */
  --link-color: arknights-orange-primary(1) oklch(0.85 0.25 30) /* 链接颜色 */
  --link-hover: arknights-orange-secondary(1) oklch(0.75 0.30 30) /* 链接悬停 */
  --link-active: arknights-orange-primary(0.8) oklch(0.85 0.25 30 / 0.8) /* 链接激活 */
  --license-block-bg: rgba(255, 255, 255, 0.2) rgba(45, 45, 45, 0.5) /* 许可证块背景 - 50%透明度 */
  
  --float-panel-bg: rgba(0, 0, 0, 0) rgba(0, 0, 0, 0) /* 浮动面板背景 - 完全透明 */
  --float-panel-border: rgba(0, 0, 0, 0) rgba(0, 0, 0, 0) /* 浮动面板边框 - 完全透明 */
  
  /* 滚动条 - 明日方舟风格 */
  --scrollbar-bg: rgba(200, 200, 210, 0.6) rgba(50, 50, 60, 0.6) /* 滚动条背景 */
  --scrollbar-bg-hover: rgba(180, 180, 190, 0.8) rgba(70, 70, 80, 0.8) /* 滚动条悬停 */
  --scrollbar-bg-active: arknights-orange-primary(0.8) oklch(0.85 0.25 30 / 0.8) /* 滚动条激活 - 橙色 */
  
  /* 目录样式 - 明日方舟风格 */
  --toc-bg: rgba(255, 255, 255, 0.95) rgba(38, 40, 48, 0.95) /* 目录背景 */
  --toc-border: rgba(255, 107, 53, 0.2) oklch(0.85 0.25 30 / 0.2) /* 目录边框 */
  --toc-item-active: arknights-orange-primary(1) oklch(0.85 0.25 30) /* 目录活跃项 - 橙色 */
  
  /* 提示框颜色 - 明日方舟风格 */
  --admonitions-color-tip: rgba(51, 143, 255, 0.9) rgba(51, 143, 255, 0.9) /* 提示 - 蓝色 */
  --admonitions-color-note: rgba(144, 48, 224, 0.9) rgba(144, 48, 224, 0.9) /* 注意 - 紫色 */
  --admonitions-color-important: rgba(0, 200, 128, 0.9) rgba(0, 200, 128, 0.9) /* 重要 - 绿色 */
  --admonitions-color-warning: rgba(247, 147, 30, 0.9) rgba(247, 147, 30, 0.9) /* 警告 - 次要橙色 */
  --admonitions-color-caution: arknights-orange-primary(0.9) oklch(0.85 0.25 30 / 0.9) /* 谨慎 - 主橙色 */
  
  /* 动画和过渡 */
  --transition-fast: 150ms ease /* 快速过渡 */
  --transition-normal: 300ms ease /* 正常过渡 */
  --transition-slow: 500ms ease /* 慢速过渡 */
  
  /* 科技感装饰 */
  --tech-grid-pattern: repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(255, 107, 53, 0.02) 10px, rgba(255, 107, 53, 0.02) 20px) /* 科技网格背景 */
  --glow-effect: 0 0 20px var(--primary-glow) /* 光晕效果 */
  
  /* 图标显示 */
  --display-light-icon: 1 0
  --display-dark-icon: 0 1
})
