/* 工具函数：生成白色透明度颜色 */
white(a)
  rgba(255, 255, 255, a)

/* 工具函数：生成黑色透明度颜色 */
black(a)
  rgba(0, 0, 0, a)

/* 风格颜色变量 - Arknights主题配色系统 */

/* 主色调：用于品牌标识、主要按钮、链接、强调文字 */
arknights-orange-primary(a)
  rgba(255, 107, 53, a) /* 主橙色 - #FF6B35 */

/* 次要色调：用于按钮悬停状态、次要强调元素 */
arknights-orange-secondary(a)
  rgba(247, 147, 30, a) /* 次要橙色 - #F7931E */

/* 三级色调：用于装饰性元素、渐变过渡 */
arknights-orange-tertiary(a)
  rgba(255, 165, 0, a) /* 三级橙色 - #FFA500 */

/* 深色背景：用于深色模式页面背景、侧边栏背景 */
arknights-dark-bg(a)
  rgba(29, 30, 34, a) /* 深色背景 - 高灰度基调 */

/* 浅色背景：用于浅色模式页面背景 */
arknights-light-bg(a)
  rgba(240, 235, 220, a) /* 浅色背景 - 高灰度基调 */

/* 深色卡片：用于深色模式下的卡片、面板容器 */
arknights-card-dark(a)
  rgba(38, 40, 48, a) /* 深色卡片 - 高灰度基调 */

/* 浅色卡片：用于浅色模式下的卡片、面板容器 */
arknights-card-light(a)
  rgba(255, 255, 255, a) /* 浅色卡片 - 纯白色 */

/* 蓝色强调色：用于科技感元素、信息提示、链接装饰 */
arknights-accent-blue(a)
  rgba(51, 143, 255, a) /* 蓝色强调色 - 科技感 */

/* 紫色强调色：用于注意提示、特殊标记 */
arknights-accent-purple(a)
  rgba(144, 48, 224, a) /* 紫色强调色 - 沉稳 */

/* 绿色强调色：用于成功提示、重要信息 */
arknights-accent-green(a)
  rgba(0, 200, 128, a) /* 绿色强调色 - 活力 */

/* 彩虹渐变 - 浅色模式：用于装饰性背景、分隔线、特殊标记 */
rainbow-light = linear-gradient(to right, oklch(0.80 0.10 0), oklch(0.80 0.10 30), oklch(0.80 0.10 60), oklch(0.80 0.10 90), oklch(0.80 0.10 120), oklch(0.80 0.10 150), oklch(0.80 0.10 180), oklch(0.80 0.10 210), oklch(0.80 0.10 240), oklch(0.80 0.10 270), oklch(0.80 0.10 300), oklch(0.80 0.10 330), oklch(0.80 0.10 360))
/* 彩虹渐变 - 深色模式：用于装饰性背景、分隔线、特殊标记 */
rainbow-dark = linear-gradient(to right, oklch(0.70 0.10 0), oklch(0.70 0.10 30), oklch(0.70 0.10 60), oklch(0.70 0.10 90), oklch(0.70 0.10 120), oklch(0.70 0.10 150), oklch(0.70 0.10 180), oklch(0.70 0.10 210), oklch(0.70 0.10 240), oklch(0.70 0.10 270), oklch(0.70 0.10 300), oklch(0.70 0.10 330), oklch(0.70 0.10 360))

:root
  /* 圆角尺寸：用于卡片、按钮、输入框等元素 */
  --radius-large 0.75rem /* 大圆角 - 主要卡片、面板 */
  --radius-small 0.375rem /* 小圆角 - 按钮、标签 */
  --content-delay 150ms /* 内容延迟动画时间 */
  --border-thin 1px /* 细边框 - 分隔线、装饰线 */
  --border-thick 2px /* 粗边框 - 强调边框 */
  
  /* 字体方案 - 科技感风格 */
  --font-primary: 'Inter', 'Noto Sans SC', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif /* 主要字体 - 正文、标题 */
  --font-mono: 'JetBrains Mono Variable', 'JetBrains Mono', 'Fira Code', Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace /* 等宽字体 - 代码、技术术语 */
  --font-size-xs: 0.75rem /* 极小字体 - 标签、元信息 */
  --font-size-sm: 0.875rem /* 小字体 - 辅助文字 */
  --font-size-base: 1rem /* 基础字体 - 正文 */
  --font-size-lg: 1.125rem /* 大字体 - 副标题 */
  --font-size-xl: 1.25rem /* 特大字体 - 小标题 */
  --font-size-2xl: 1.5rem /* 超大字体 - 标题 */
  --font-size-3xl: 1.875rem /* 巨大字体 - 主标题 */
  --font-size-4xl: 2.25rem /* 超巨大字体 - 特殊标题 */
  --font-weight-light: 300 /* 细体字重 - 装饰性文字 */
  --font-weight-regular: 400 /* 常规字重 - 正文 */
  --font-weight-medium: 500 /* 中等字重 - 强调文字 */
