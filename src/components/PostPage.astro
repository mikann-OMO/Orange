---
import type { CollectionEntry } from "astro:content";
import { getPostUrlBySlug } from "@utils/url-utils";
import PostCard from "./PostCard.astro";

const { page } = Astro.props;

let delay = 0;
const interval = 50;
const baseDelay = 400;
---
<div class="transition flex flex-col py-1 md:py-0 md:gap-4 mb-4">
    {page.data.map((entry: CollectionEntry<"posts">) => (
        <PostCard
                entry={entry}
                title={entry.data.title}
                tags={entry.data.tags}
                category={entry.data.category}
                published={entry.data.published}
                updated={entry.data.updated}
                url={getPostUrlBySlug(entry.slug)}
                image={entry.data.image}
                description={entry.data.description}
                draft={entry.data.draft}
                class:list="onload-animation fade-in-up"
                style={`animation-delay: calc(var(--content-delay) + ${baseDelay + delay * interval}ms);`}
                delay={baseDelay + delay++ * interval}
        ></PostCard>
    ))}
</div>