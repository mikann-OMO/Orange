---
import { Icon } from "astro-icon/components";
import { type NavBarLink } from "../../types/config";
import { url } from "../../utils/url-utils";

interface Props {
	links: NavBarLink[];
}

const links = Astro.props.links;
---
<div id="nav-menu-panel" class:list={["float-panel", "float-panel-closed", "absolute", "transition-all", "duration-300", "ease-in-out", "fixed", "inset-0", "top-16", "bg-[var(--card-bg)]", "border-t", "border-[var(--card-border)]", "shadow-[0_-4px_20px_rgba(0,0,0,0.1)]", "dark:shadow-[0_-4px_20px_rgba(0,0,0,0.3)]", "backdrop-blur-md", "z-50"]}>
    <div class="flex flex-col h-full">
        <div class="py-4 px-6 border-b border-[var(--card-border)]">
            <h3 class="text-lg font-bold text-[var(--primary)]">导航菜单</h3>
        </div>
        <div class="flex-1 overflow-y-auto py-2">
            {links.map((link) => (
                <a 
                    href={link.external ? link.url : url(link.url)} 
                    class="group flex justify-between items-center py-4 px-6 rounded-none
                        hover:bg-[var(--btn-plain-bg-hover)] active:bg-[var(--btn-plain-bg-active)] transition-all
                        text-lg font-bold font-['SimSun',serif]
                    "
                    target={link.external ? "_blank" : null}
                >
                    <div class="transition-all text-black/85 dark:text-white/85 group-hover:text-[var(--primary)] group-active:text-[var(--primary)]">
                        {link.name}
                    </div>
                    {!link.external && <Icon 
                        name="material-symbols:chevron-right-rounded"
                        class="transition-all text-[1.5rem] text-[var(--primary)] group-hover:translate-x-1"
                    />
                    }
                    {link.external && <Icon 
                        name="fa6-solid:arrow-up-right-from-square"
                        class="transition-all text-[0.875rem] text-black/30 dark:text-white/30 group-hover:translate-x-1 group-hover:-translate-y-1"
                    />
                    }
                </a>
            ))}
        </div>
    </div>
</div>
