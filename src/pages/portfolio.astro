---
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";
import MainGridLayout from "../layouts/MainGridLayout.astro";

const works = [
	{
		id: "1",
		title: "（测试）作品标题",
		image: "/image/aqours.jpg",
		description: "（测试）作品描述",
	},
];
---

<MainGridLayout title="作品" description="作品集展示">
  <div class="card-base p-6 md:p-8 rounded-[var(--radius-large)]">
    <div class="text-2xl md:text-3xl font-bold mb-6 text-90">
      作品集（包含练习、临摹、原创）
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {works.map((work) => (
        <div key={work.id} class="rounded-[var(--radius-large)] shadow-lg overflow-hidden">
          <div class="aspect-video bg-gray-100 dark:bg-gray-800 overflow-hidden portfolio-gallery">
            <img src={work.image} alt={work.title} class="w-full h-full object-cover transition-transform duration-500 hover:scale-105 cursor-pointer" />
          </div>
          <div class="p-4 bg-[var(--card-bg)]">
            <h3 class="text-lg font-bold mb-1 text-90">{work.title}</h3>
            <p class="text-sm text-75">{work.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</MainGridLayout>